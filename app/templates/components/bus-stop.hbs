<div class="col s12 m6">
  <div class="card">
    <div class="card-image">
      <img src="http://lorempixel.com/400/200/city/">
      <span class="card-title">
        {{stop.name}}
      </span>
      <a class="btn-floating halfway-fab waves-effect activator waves-light red"><i class="material-icons">add</i></a>
    </div>
    <div class="card-action">
      {{#if stop.donationsRaisedInDollars}}
        <h5>${{stop.donationsRaisedInDollars}} pledged of $700</h5>
      {{else}}
        <h5>Goal is <strong>$700</strong></h5>
      {{/if}}
      <p>{{ratio}}% funded</p>
      <div class="progress">
        <div class="determinate" style="width: {{ratio}}%"></div>
      </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{stop.name}}<i class="material-icons right">close</i></span>
      <iframe width="100%" height="75%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q={{stop.lat}},{{stop.lng}}&hl=es;z=14&amp;output=embed"></iframe>
    </div>
    <div class="card-action">
      <a class="waves-effect waves-light btn" {{action 'openModal'}}><i class="material-icons left"><i class="material-icons">attach_money</i></i>donate</a>
    </div>
  </div>
  <!-- Modal Structure -->
  <div id="{{stop.stopId}}" class="modal">
    <div class="modal-content">
      <h4>Donate for <strong>{{stop.name}}</strong></h4>

      <div class="row">
        <form class="col s12">
          {{#if requiredFields}}
            <p class="red-text col s12">*Please fill in the required fields</p>
          {{/if}}
          <div class="input-field col s6">
            {{input id=(concat 'last_name' stop.stopId) type="text" class="validate" value=name}}
            <label for="last_name{{stop.stopId}}">Name*</label>
          </div>
          <div class="input-field col s6">
            {{input id=(concat 'email' stop.stopId) type="email" class="validate" value=email}}
            <label for="email{{stop.stopId}}" data-error="Enter a valid email address">Email</label>
          </div>
          <div class="input-field col s6">
            {{input id=(concat 'money' stop.stopId) type="number" class="validate" value=donationAmount}}
            <label for="money{{stop.stopId}}">Donation amount (US Dollar)*</label>
          </div>
          <div class="input-field col s12">
            {{input id=(concat 'credit_name' stop.stopId) type="text" class="validate" value=credit_name}}
            <label for="credit_name{{stop.stopId}}">Name on Credit Card*</label>
          </div>
          <div class="input-field col s12">
            {{input id=(concat 'card_number' stop.stopId) type="text" class="validate" value=card_number}}
            <label for="card_number{{stop.stopId}}">Credit Card Number*</label>
          </div>
          <div class="input-field col s6">
            {{input id=(concat 'card_date' stop.stopId) placeholder="dd/mm" type="text" class="validate" value=card_date}}
            <label for="card_date{{stop.stopId}}">Expiration Date*</label>
          </div>
          <div class="input-field col s6">
            {{input id=(concat 'card_code' stop.stopId) placeholder="***" type="text" class="validate" value=card_code}}
            <label for="card_code{{stop.stopId}}">Card Code*</label>
          </div>
        </form>
      </div>

    </div>
    <div class="modal-footer">
      <a class="waves-effect waves-green btn" {{action 'donate'}}>confirm</a>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">discard</a>
    </div>
  </div>
</div>